<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.ClientController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField promptText="username" fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Message:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField promptText="message" fx:id="messageField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Send" onAction="#sendMessage" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Exit" onAction="#exit" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

</GridPane>